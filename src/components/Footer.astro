---
import { getData } from '../lib/data';
const shopInfo = await getData('shop-info');
const yr = new Date().getFullYear();
---

<footer class="bg-dark text-white/70">
  <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-14">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2.5 mb-4">
          <div class="w-8 h-8 rounded bg-white/10 flex items-center justify-center text-white font-bold text-[11px]">AG</div>
          <span class="text-white font-semibold text-sm">{shopInfo.name}</span>
        </a>
        <p class="text-white/50 text-sm leading-relaxed mb-4 max-w-xs">{shopInfo.description}</p>
        <div class="flex gap-2">
          {shopInfo.social.instagram && <a href={shopInfo.social.instagram} target="_blank" rel="noopener" class="w-8 h-8 rounded bg-white/5 hover:bg-white/10 flex items-center justify-center text-white/50 hover:text-white transition-all" aria-label="Instagram"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg></a>}
          {shopInfo.social.facebook && <a href={shopInfo.social.facebook} target="_blank" rel="noopener" class="w-8 h-8 rounded bg-white/5 hover:bg-white/10 flex items-center justify-center text-white/50 hover:text-white transition-all" aria-label="Facebook"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg></a>}
          {shopInfo.social.youtube && <a href={shopInfo.social.youtube} target="_blank" rel="noopener" class="w-8 h-8 rounded bg-white/5 hover:bg-white/10 flex items-center justify-center text-white/50 hover:text-white transition-all" aria-label="YouTube"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg></a>}
        </div>
      </div>
      <div>
        <h3 class="text-[11px] font-semibold uppercase tracking-[0.15em] text-white/40 mb-3">Navigation</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-sm hover:text-white transition-colors">Home</a></li>
          <li><a href="/products" class="text-sm hover:text-white transition-colors">Products</a></li>
          <li><a href="/about" class="text-sm hover:text-white transition-colors">About Us</a></li>
          <li><a href="/contact" class="text-sm hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-[11px] font-semibold uppercase tracking-[0.15em] text-white/40 mb-3">Categories</h3>
        <ul class="space-y-2">
          <li><a href="/products?category=Air+Rifle" class="text-sm hover:text-white transition-colors">Air Rifles</a></li>
          <li><a href="/products?category=Air+Pistol" class="text-sm hover:text-white transition-colors">Air Pistols</a></li>
          <li><a href="/products?category=Pellets+%26+Ammo" class="text-sm hover:text-white transition-colors">Pellets & Ammo</a></li>
          <li><a href="/products?category=Accessories" class="text-sm hover:text-white transition-colors">Accessories</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-[11px] font-semibold uppercase tracking-[0.15em] text-white/40 mb-3">Contact</h3>
        <ul class="space-y-2 text-sm">
          <li>{shopInfo.address.street}, {shopInfo.address.city}</li>
          <li><a href={`tel:${shopInfo.phone}`} class="hover:text-white transition-colors">{shopInfo.phone}</a></li>
          <li><a href={`mailto:${shopInfo.email}`} class="hover:text-white transition-colors">{shopInfo.email}</a></li>
          <li>{shopInfo.hours.weekdays}</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="border-t border-white/10">
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between text-xs text-white/30">
      <p>&copy; {yr} {shopInfo.name}</p>
      <a href="/admin" class="hover:text-white/50 transition-colors">Admin</a>
    </div>
  </div>
</footer>
