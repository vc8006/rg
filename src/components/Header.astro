---
import { getData } from '../lib/data';
const shopInfo = await getData('shop-info');
const currentPath = Astro.url.pathname;
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/products', label: 'Products' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-bg/95 backdrop-blur-md border-b border-border">
  <div class="w-full max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-[60px]">
      <a href="/" class="flex items-center gap-2.5 shrink-0">
        <div class="w-8 h-8 rounded bg-brand flex items-center justify-center text-white font-bold text-[11px] tracking-wide">AG</div>
        <span class="text-heading font-semibold text-sm hidden sm:block">{shopInfo.name}</span>
      </a>

      <nav class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a href={link.href} class:list={['px-3 py-1.5 rounded-md text-[13px] font-medium transition-colors', currentPath === link.href ? 'text-brand bg-brand-muted' : 'text-muted hover:text-heading hover:bg-bg-muted']}>
            {link.label}
          </a>
        ))}
      </nav>

      <div class="hidden md:flex items-center gap-2">
        <button id="theme-toggle" class="p-2 rounded-md text-muted hover:text-heading hover:bg-bg-muted transition-all cursor-pointer" aria-label="Toggle dark mode">
          <svg id="theme-sun" class="w-4 h-4 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"/></svg>
          <svg id="theme-moon" class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"/></svg>
        </button>
        <a href={`tel:${shopInfo.phone}`} class="text-[13px] text-muted hover:text-heading transition-colors">{shopInfo.phone}</a>
        <a href={shopInfo.social.whatsapp} target="_blank" class="inline-flex items-center gap-1.5 bg-green text-white px-3 py-1.5 rounded-md text-[13px] font-medium hover:opacity-90 transition-opacity">
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          WhatsApp
        </a>
      </div>

      <div class="flex items-center gap-1 md:hidden">
        <button id="mobile-theme-toggle" class="p-2 text-muted" aria-label="Toggle dark mode">
          <svg id="m-theme-sun" class="w-5 h-5 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"/></svg>
          <svg id="m-theme-moon" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"/></svg>
        </button>
        <button id="mobile-menu-btn" class="text-muted p-2 -mr-2" aria-label="Menu">
          <svg id="m-open" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/></svg>
          <svg id="m-close" class="w-5 h-5 hidden" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-border pt-3">
      <div class="flex flex-col gap-0.5">
        {navLinks.map(link => (
          <a href={link.href} class:list={['px-3 py-2.5 rounded-md text-sm font-medium', currentPath === link.href ? 'bg-brand-muted text-brand' : 'text-muted hover:text-heading']}>{link.label}</a>
        ))}
        <div class="flex gap-2 mt-3">
          <a href={`tel:${shopInfo.phone}`} class="flex-1 text-center border border-border text-body text-sm py-2 rounded-md hover:bg-bg-muted transition-colors">Call</a>
          <a href={shopInfo.social.whatsapp} target="_blank" class="flex-1 text-center bg-green text-white text-sm py-2 rounded-md">WhatsApp</a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function setupThemeToggle() {
    const isDark = () => document.documentElement.classList.contains('dark');

    function updateIcons() {
      const dark = isDark();
      document.getElementById('theme-sun')?.classList.toggle('hidden', !dark);
      document.getElementById('theme-moon')?.classList.toggle('hidden', dark);
      document.getElementById('m-theme-sun')?.classList.toggle('hidden', !dark);
      document.getElementById('m-theme-moon')?.classList.toggle('hidden', dark);
    }

    function toggle() {
      document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', isDark() ? 'dark' : 'light');
      updateIcons();
    }

    document.getElementById('theme-toggle')?.addEventListener('click', toggle);
    document.getElementById('mobile-theme-toggle')?.addEventListener('click', toggle);
    updateIcons();
  }

  function setupMobileMenu() {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const o = document.getElementById('m-open');
    const c = document.getElementById('m-close');
    btn?.addEventListener('click', () => {
      const open = !menu?.classList.contains('hidden');
      menu?.classList.toggle('hidden');
      o?.classList.toggle('hidden', !open);
      c?.classList.toggle('hidden', open);
    });
  }

  setupThemeToggle();
  setupMobileMenu();
</script>
