---
export const prerender = false;
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { getData } from '../../lib/data';

const products = await getData('products');
const shopInfo = await getData('shop-info');

const { slug } = Astro.params;
const product = products.find((p: any) => p.slug === slug);
if (!product) return Astro.redirect('/products');
const fmt = (p: number) => new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR', maximumFractionDigits: 0 }).format(p);
const discount = product.originalPrice ? Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100) : 0;
const related = products.filter(p => p.category === product.category && p.slug !== product.slug).slice(0, 4);
const specs = [
  { label: 'Caliber', value: product.caliber },
  { label: 'Velocity', value: product.velocity },
  { label: 'Weight', value: product.weight },
  { label: 'Barrel Length', value: product.barrelLength },
  { label: 'Power Source', value: product.powerSource },
  { label: 'Brand', value: product.brand },
  { label: 'Category', value: product.category },
].filter(s => s.value && s.value !== 'N/A');

const schema = { "@context": "https://schema.org", "@type": "Product", "name": product.name, "description": product.description, "image": product.images[0], "brand": { "@type": "Brand", "name": product.brand }, "offers": { "@type": "Offer", "price": product.price, "priceCurrency": product.currency, "availability": product.inStock ? "https://schema.org/InStock" : "https://schema.org/OutOfStock" } };
---

<BaseLayout title={product.name} description={product.description} image={product.images[0]} type="product" schema={schema}>
  <div class="border-b border-border bg-bg-alt">
    <nav class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-3 flex items-center gap-1.5 text-xs text-muted">
      <a href="/" class="hover:text-heading transition-colors">Home</a>
      <svg class="w-3 h-3 text-faint" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/></svg>
      <a href="/products" class="hover:text-heading transition-colors">Products</a>
      <svg class="w-3 h-3 text-faint" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/></svg>
      <span class="text-heading truncate">{product.name}</span>
    </nav>
  </div>

  <section>
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-10 lg:py-14">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <div class="bg-bg-alt rounded-xl border border-border p-8 flex items-center justify-center aspect-square lg:aspect-auto lg:min-h-[400px]">
          <img src={product.images[0]} alt={product.name} class="max-w-full max-h-[400px] object-contain" />
        </div>

        <div>
          <div class="flex items-center gap-2 mb-3">
            <span class="text-[11px] font-semibold uppercase tracking-wider text-brass bg-brass-bg px-2 py-0.5 rounded">{product.category}</span>
            <span class:list={["text-[11px] font-semibold px-2 py-0.5 rounded", product.inStock ? "text-green bg-green-bg" : "text-red bg-red-bg"]}>{product.inStock ? "In Stock" : "Out of Stock"}</span>
          </div>
          <p class="text-[11px] font-medium uppercase tracking-wider text-muted mb-1">{product.brand}</p>
          <h1 class="text-2xl sm:text-3xl font-bold text-heading tracking-tight mb-3">{product.name}</h1>

          <div class="flex items-baseline gap-2 mb-5">
            <span class="text-2xl font-bold text-heading">{fmt(product.price)}</span>
            {product.originalPrice && product.originalPrice > product.price && (
              <><span class="text-muted line-through text-sm">{fmt(product.originalPrice)}</span><span class="text-[11px] font-semibold text-green bg-green-bg px-1.5 py-0.5 rounded">-{discount}%</span></>
            )}
          </div>

          <p class="text-body text-sm leading-relaxed mb-6">{product.description}</p>

          <div class="mb-6">
            <h3 class="text-[11px] font-semibold uppercase tracking-[0.15em] text-brass mb-3">Key Features</h3>
            <ul class="space-y-1.5">
              {(product.features as string[]).map((f: string) => (
                <li class="flex items-start gap-2 text-sm text-body">
                  <svg class="w-4 h-4 text-green mt-0.5 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"/></svg>
                  {f}
                </li>
              ))}
            </ul>
          </div>

          <div class="flex flex-wrap gap-3">
            <a href={`tel:${shopInfo.phone}`} class="inline-flex items-center gap-2 bg-brand hover:bg-brand-light text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition-all">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/></svg>
              Call to Order
            </a>
            <a href={shopInfo.social.whatsapp} target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 bg-green text-white hover:opacity-90 px-5 py-2.5 rounded-lg text-sm font-semibold transition-all">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
              WhatsApp
            </a>
          </div>
        </div>
      </div>

      {specs.length > 0 && (
        <div class="mt-12">
          <h2 class="text-[11px] font-semibold uppercase tracking-[0.15em] text-brass mb-4">Specifications</h2>
          <div class="rounded-lg border border-border overflow-hidden">
            {specs.map((s, i) => (
              <div class:list={["flex px-5 py-3 text-sm", i % 2 === 0 ? "bg-bg-alt" : "bg-card"]}>
                <span class="text-muted w-40 shrink-0 font-medium">{s.label}</span>
                <span class="text-heading">{s.value}</span>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>

  {related.length > 0 && (
    <section class="border-t border-border">
      <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-lg font-semibold text-heading mb-5">Related Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
          {related.map(rp => (
            <ProductCard slug={rp.slug} name={rp.name} brand={rp.brand} category={rp.category} price={rp.price} originalPrice={rp.originalPrice} image={rp.images[0]} inStock={rp.inStock} caliber={rp.caliber} />
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>
